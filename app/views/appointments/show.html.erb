<div class="jumbotron">
  <h1 class="display-4">
    Fecha y hora: <%= @appointment.date %> 
  </h1>
  <h1 class="display-4">
    Sucursal: <%= @appointment.branch.name %>
  </h1>
  
  <p class="lead">
    Cliente: <%= @appointment.client.email %>  | 
    Motivo: <%= @appointment.motive %> 
    <% if @appointment.attended?%>
      Estado: Atendido
    <% elsif @appointment.pending? %>
      Estado: Pendiente
    <% else %>
      Estado: Cancelado
    <% end %>
  </p>
  <br/>
<div>
  <div class='d-flex '>

    <%= link_to "Volver al listado", appointments_path,  class: "btn btn-primary" %>
  <div>

</div>