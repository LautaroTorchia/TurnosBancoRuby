<section class="vh-100">
  <div class="container-fluid">
                  <%= form_for(resource, as: resource_name,class:"mx-1 mx-md-4" ,url: registration_path(resource_name)) do |f| %>
                    <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Registrarse</h2>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="field form-outline mb-4">
                      <%= f.label "Email",class:"form-label",for:"form2Example18" %><br />
                      <%= f.email_field :email, autofocus: true,class:"form-control form-control-lg",id:"form2Example18" %>
                    </div>

                    <div class="field form-outline mb-4">
                      <%= f.label "ContraseÃ±a",class:"form-label", for:"form2Example28"%>
                      <%= f.password_field :password, autocomplete: "current-password",class:"form-control form-control-lg",id:"form2Example28" %>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0 field">
                        <%= f.label "Confirmar ContraseÃ±a",class:"form-label" %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control form-control-lg" %>
                      </div>
                    </div>

                    <div class="actions pt-1 mb-4">
                        <%= f.submit "Registrarse",class:"btn btn-info btn-lg btn-block"%>
                    </div>
                  <%= render "devise/shared/links" %>
                <% end %>
        </div>
</section>

