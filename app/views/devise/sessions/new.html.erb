<section class="vh-100">
  <div class="container-fluid">
          <%= form_for(resource, as: resource_name, class:"width: 23rem;", url: session_path(resource_name)) do |f| %>

            <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Iniciar Sesion</h2>

            <div class="field form-outline mb-4">
              <%= f.email_field :email, autofocus: true,class:"form-control form-control-lg",id:"form2Example18" %>
               <%= f.label "Email",class:"form-label",for:"form2Example18" %><br />
            </div>

            <div class="field form-outline mb-4">
              <%= f.password_field :password, autocomplete: "current-password",class:"form-control form-control-lg",id:"form2Example28" %>
              <%= f.label "ContraseÃ±a",class:"form-label", for:"form2Example28"%>
            </div>

             <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Recuerdame" %>
               </div>
             <% end %>

            <div class="actions pt-1 mb-4">
              <%= f.submit "Login", data: {turbo: false},class:"btn btn-info btn-lg btn-block" %>
            </div>

            <%= render "devise/shared/links" %>
          <% end %>
  </div>
  </div>
</section>
