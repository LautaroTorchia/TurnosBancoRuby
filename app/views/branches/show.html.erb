<div class="jumbotron">
  <h1 class="display-4">
    Nombre: <%= @branch.name %>
  </h1>
  <p class="lead">
    Direccion: <%= @branch.address %>  | 
    Telefono: <%= @branch.phone_number %>  
  </p>
  <br/>
<div>
  <div class='d-flex '>
    <%  if can? :update, @branch %>
      <%= link_to "Editar sucursal", edit_branch_path(@branch) ,class: "btn btn-secondary"  %> 
    <% end %>
    <% if can? :destroy, @branch %>
      <%= button_to "Borrar sucursal", @branch, method: :delete, class: "btn btn-danger"%>
    <% end %>
    <%= link_to "Volver al listado", branches_path,  class: "btn btn-dark"%>
  <div>

</div>
